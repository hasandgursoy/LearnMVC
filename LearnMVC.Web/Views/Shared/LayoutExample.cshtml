<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnMVC.Web</title>
</head>

<body>
    <header>
        @await RenderSectionAsync("header", required: false)

    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <footer>
        @await RenderSectionAsync("footer", required: false)

    </footer>

</body>

</html>
